# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=TrueBackup

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=7d

# S3/Wasabi Configuration
S3_ACCESS_KEY_ID=your_wasabi_access_key
S3_SECRET_ACCESS_KEY=your_wasabi_secret_key
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.wasabisys.com
S3_DEFAULT_BUCKET=truebackup-storage
S3_PRESIGNED_URL_EXPIRES=3600

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@truebackup.com

# Application Settings
MAX_FILE_SIZE_MB=5120
SESSION_TIMEOUT_MINUTES=30
ENABLE_ACTIVITY_LOGS=true

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Admin Setup (First Run Only)
ADMIN_EMAIL=admin@truebackup.com
ADMIN_PASSWORD=Admin@123456
ADMIN_NAME=System Administrator
